<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<mp:config xmlns:mp="http://magnetopong.org/config">
    <display>
        <width>1980</width>
        <height>1200</height>
        <fullscreen>true</fullscreen>
        <fullscreenmonitor>0</fullscreendisplaymonitor>
    </display>
    <sound>
        <volume>1</volume>
	<effects>
           <effect name="point">effects/ping.ogg</effect>
           <effect name="collision">effects/sch.ogg</effect>
           <effect name="win">effects/aus.ogg</effect>
           <effect name="fight">effects/fight.ogg</effect>
           <effect name="boost">effects/ohjea.ogg</effect>
	</effects>
    </sound>
    <physics>
	<ball>
           <acceleration>5.0</acceleration>
           <radius>15</radius>
        </ball>
	<bat>
           <radius>15</radius>
        </bat>
    </physics>
    <gameplay>
        <winpoints>11</winpoints>
        <enableeastereggs>true</enableeastereggs>
    </gameplay>
    <openniconfigfile>Sample-User.xml</openniconfigfile>
</mp:config>
